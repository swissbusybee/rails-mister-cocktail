<div class="container">
  <div class="row">
    <div class="mt-4 col-sm-12 col-lg-6">
      <h3>Add an Ingredient & Quantity for <%= @cocktail.name %></h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
        <%= f.input :description %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <hr>
    <%= link_to 'Back to Cocktail', cocktail_path(@cocktail), class: "btn btn-primary" %>
</div>
